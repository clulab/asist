{
	"definitions": {
	},
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "https://github.com/clulab/tomcat-text/message_specs/data/source.json",
	"type": "object",
	"title": "data source schema",
	"version": "0.5",
	"required": [
		"source_type",
		"source_name"
       	],
	"properties": {
                "source_type": {
                        "$id": "#/source/source_type",
                        "type": "string",
                        "title": "source_type schema",
                        "default": "",
                        "examples": [ "vtt_file" ],
			"pattern": "^([a-z_]*?)$"
                },
		"source_name": {
                        "$id": "#/source/source_name",
                        "type": "string",
                        "title": "source_name schema",
                        "default": "",
                        "examples": [ "AudioTranscript_1.vtt" ],
                        "pattern": "^([0-9]*?)\\.([0-9]*?)$"
                }
	}
}
