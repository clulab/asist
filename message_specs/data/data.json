{
	"definitions": {
	},
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "https://github.com/clulab/tomcat-text/message_specs/data/data.json",
	"type": "object",
	"title": "data schema",
	"version": "0.5",
	"required": [
		"label",
		"span",
		"arguments",
		"test",
		"timestamp",
		"taxonomy_matches"
       	],
	"properties": {
		"label": {
			"$id": "#/properties/label",
			"type": "string",
			"title": "label schema",
			"default": "",
			"examples": [ "label" ],
			"pattern": "^(.*)$"
		},
		"span": {
			"$id": "#/properties/span",
			"type": "string",
			"title": "span schema",
			"default": "",
			"examples": [ "span" ],
			"pattern": "^(.*)$"
		},
		"arguments": {
			"$id": "#/properties/arguments",
			"type": "string",
			"title": "arguments schema",
			"default": "",
			"examples": [ "arguments" ],
			"pattern": "^(.*)$"
		},
		"text": {
			"$id": "#/properties/text",
			"type": "string",
			"title": "text schema",
			"default": "",
			"examples": [ "text" ],
			"pattern": "^(.*)$"
		},
		"timestamp": {
			"$id": "#/properties/timestamp",
			"type": "string",
			"title": "timestamp schema",
			"default": "",
			"examples": [ "2019-12-26T14:05:02.3412Z" ],
			"pattern": "[0-9]{4}-[0-9]{2}-[0-9]{2}T[0-9]{2}:[0-9]{2}:[0-9]{2}[.]?[0-9]{0,}?Z"
		},
		"taxonomy_matches": {
			"$id": "#/properties/taxonomy_matches",
			"type": "string",
			"title": "taxonomy_matches schema",
			"default": "",
			"examples": [ "taxonomy_matches" ],
			"pattern": "^(.*)$"
		}
	}
}

