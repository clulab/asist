{
	"definitions": {
	},
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "https://github.com/clulab/tomcat-text/message_specs/data.json",
	"type": "object",
	"title": "Dialog Analysis Data Schema",
	"version": "0.5",
	"required": [
		"timestamp",
		"message_type",
		"version"
       	],
	"properties": {
		"timestamp": {
                        "$id": "#/properties/timestamp",
                        "type": "string",
                        "title": "The Timestamp Schema",
                        "default": "",
                        "examples": [ "2019-12-26T14:05:02.3412Z" ],
                        "pattern": "[0-9]{4}-[0-9]{2}-[0-9]{2}T[0-9]{2}:[0-9]{2}:[0-9]{2}[.]?[0-9]{0,}?Z"
                },
                "message_type": {
                        "$id": "#/properties/message_type",
                        "type": "string",
                        "title": "The Message Type Schema",
                        "default": "",
                        "examples": [ "event" ],
			"pattern": "^([a-z_]*?)$"
                },
		"version": {
                        "$id": "#/properties/version",
                        "type": "string",
                        "title": "The Version Schema",
                        "default": "",
                        "examples": [ "0.1", "1.0" ],
                        "pattern": "^([0-9]*?)\\.([0-9]*?)$"
                }
	}
}

