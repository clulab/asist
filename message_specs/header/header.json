{
  "definitions": {},
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/clulab/tomcat-text/message_specs/header/header.json",
  "type": "object",
  "title": "header schema",
  "version": "0.5",
  "required": [
    "timestamp",
    "message_type",
    "version"
  ],
  "properties": {
    "timestamp": {
      "$id": "#/properties/timestamp",
      "type": "string",
      "title": "timestamp schema",
      "default": "",
      "examples": [ "2019-12-26T14:05:02.3412Z" ],
      "pattern": "[0-9]{4}-[0-9]{2}-[0-9]{2}T[0-9]{2}:[0-9]{2}:[0-9]{2}[.]?[0-9]{0,}?Z"
    },
    "message_type": {
      "$id": "#/properties/message_type",
      "type": "string",
      "title": "message_type schema",
      "default": "",
      "examples": [ "event" ],
      "pattern": "^([a-z_]*?)$"
    },
    "version": {
      "$id": "#/properties/version",
      "type": "string",
      "title": "version schema",
      "default": "",
      "examples": [ "0.1", "1.0" ],
      "pattern": "^([0-9]*?)\\.([0-9]*?)$"
    }
  }
}
